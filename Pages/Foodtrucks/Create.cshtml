@page
@model ProiectWeb.Pages.Foodtrucks.CreateModel

@{
    ViewData["Title"] = "Adaugă";
}

<h1>Adaugă</h1>

<h4>Foodtruck</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Foodtruck.Nume" class="control-label"></label>
                <input asp-for="Foodtruck.Nume" class="form-control" required/>
                <span asp-validation-for="Foodtruck.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foodtruck.Tip" class="control-label"></label>
                <input asp-for="Foodtruck.Tip" class="form-control" required/>
                <span asp-validation-for="Foodtruck.Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foodtruck.Adresa" class="control-label"></label>
                <input asp-for="Foodtruck.Adresa" class="form-control" required/>
                <span asp-validation-for="Foodtruck.Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}