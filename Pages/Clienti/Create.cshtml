@page
@model ProiectWeb.Pages.Clienti.CreateModel

@{
    ViewData["Title"] = "Adaugă client";
}

<h1>Creează</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Client.Nume" class="control-label"></label>
                <input asp-for="Client.Nume" class="form-control" required/>
                <span asp-validation-for="Client.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.NrTel" class="control-label">Numar telefon</label>
                <input asp-for="Client.NrTel" class="form-control" required type="number"/>
                <span asp-validation-for="Client.NrTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Email" class="control-label"></label>
                <input asp-for="Client.Email" class="form-control" required />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
